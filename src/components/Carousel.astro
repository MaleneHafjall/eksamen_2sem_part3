import "../styles/generel.css";
---

<!-- Karussel container -->
<div class="carousel">
  <div class="carousel-container">
   
    <button class="prev"><img src="/img/tilbage_pil.webp" alt="tilbage pil" loading="lazy"></button>
    
    <div class="carousel-slide">
      <img src="/img/strandgade50_carousel.webp" class="carousel-image" alt="Strandgade 50" loading="lazy">
      <div class="carousel-text">STRANDGADE 50</div>
    </div>
    
    <div class="carousel-slide">
      <img src="/img/c_kulhuse.webp" class="carousel-image" alt="Sommerbolig i Kulhuse" loading="lazy">
      <div class="carousel-text">SOMMERBOLIG I KULHUSE</div>
    </div>
   
    <div class="carousel-slide">
      <img src="/img/c_villahubbe.webp" class="carousel-image" alt="Villa Hubbe" loading="lazy">
      <div class="carousel-text">VILLA HÜBBE</div>
    </div>
    <button class="next"><img src="/img/frem_pil.webp" alt="frem pil" loading="lazy"></button>
  </div>
</div>

<style>
  /* Karusselens stil */
  .carousel {
    width: 80%;
    overflow: hidden;
    display: flex;
    align-items: center; 
    position: relative;
    margin: 0 auto; /* Gør karussellen centreret på siden */
  }

  /* Dette er containeren som  indeholder alle img */
  .carousel-container {
    display: flex;
    width: 100%;
    transition: transform 0.5s ease; 
    position: relative;
  }

  /* Hver slide i karussellen */
  .carousel-slide {
    position: relative;
    min-width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Billederne i hver slide */
  .carousel-image {
    width: 100%;
    display: block;
    flex-shrink: 0;
  }

  /* styling af teksten der vises ovenpå billederne */
  .carousel-text {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: var(--primary-color);
    background: none;
    font-size: 1rem;
    font-family: var(--font-primary);
    font-weight: var(--font-weight-regular);
    text-align: center;
  }

  /* Knapperne til at skifte billeder */
  .prev, .next {
    background: none;
    border: none;
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
  }

  .prev {
    left: 5px;
  }

  .next {
    right: 5px;
  }

  .prev img, .next img {
    width: 30px; 
    height: auto;
  }

  /* Tablet stil */
  @media (min-width: 768px) and (max-width: 1024px) {
    .carousel {
      width: 90%;
    }

    .carousel-text {
      font-size: 1.25rem;
      bottom: 30px;
      padding: 10px;
    }

    .prev img, .next img {
      width: 6%; 
    }
  }

  /* Desktop stil */
  @media (min-width: 1025px) {
    .carousel {
      width: 70%;
    }

    .carousel-text {
      font-size: 1.5rem;
      bottom: 40px;
      padding: 15px;
    }

    .carousel-image {
      width: 400px;
      height: 365px;
      object-fit: cover; /* Sørger for, at billedet fylder hele containeren! */
    }

    .prev, .next {
      top: 50%;
      transform: translateY(-20%);
    }

    .prev {
      left: 170px; /* Placerer knappen inde på billedet */
    }

    .next {
      right: 170px; /* Placerer knappen inde på billedet */
    }

    .prev img, .next img {
      width: 40px; /* Juster pilenes størrelse for desktop */
      height: auto;
    }
  }
</style>

<script>
let current = 0; // Dette holder styr på hvilket billede der vises nu
let slides;

if (typeof window !== "undefined") {
  slides = document.querySelectorAll('.carousel-slide');
  slides.forEach((slide, index) => {
    slide.style.display = index === 0 ? 'flex' : 'none'; // Vis det første billede, skjul resten
  });

  document.querySelector('.prev').addEventListener('click', () => changeSlide(-1)); // Skift til forrige billede
  document.querySelector('.next').addEventListener('click', () => changeSlide(1));  // Skift til næste billede

  setInterval(() => {
    changeSlide(1); // Skift til næste billede hver 10. sekund
  }, 10000);
}

function changeSlide(direction) {
  slides[current].style.display = 'none'; // Skjul det nuværende billede
  current = (current + direction + slides.length) % slides.length; // Find næste billede
  slides[current].style.display = 'flex'; // Vis det næste billede
}
</script>
