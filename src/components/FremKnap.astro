---
const {text} = Astro.props;
import "../styles/generel.css";

---
<button type="button">
    <slot />
    <span class="label">
        {text}
    </span>
</button>

<style>
    button{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0.5rem;;
    background: none;
    color: none;
    border: none;
    cursor: pointer;
    gap: 0.5rem;
    }
    button>.label{
       text-align: left;
    }
    .label{
    font-size: var(--footer-secondary-font-size);
      letter-spacing: 0.081rem;
      text-transform: var(--text-transform-uppercase);
      font-weight: var(--font-weight-medium);
      color: var(--secondary-color);
      word-wrap: break-word;
      width: 200px;
    }
    </style>