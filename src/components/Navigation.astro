     <style>
   
        nav {
            display: flex;
            align-items: center;
        }

        .menu {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .menu li {
            margin-right: 20px;
        }

        .menu li:last-child {
            margin-right: 0;
        }

        .menu a {
            display: block;
            /* padding: 10px; */
            color: var(  --secondary-color);
            text-decoration: none;
            transition: color 0.3s;
        }

        .menu a:hover {
            color:  var( --tertiary-color);
        }

        .burger {
            width: 30px;
            height: 20px;
            cursor: pointer;
        }

        .burger .line {
            width: 100%;
            height: 3px;
            color: var(  --secondary-color);
            margin-bottom: 7px;
            transition: 0.2s linear;
        }

        .burger {
            display: none;
        }

        .sticky_menu a.active,
        .sticky_menu a:hover {
          color:  var( --tertiary-color);
        }

        @media screen and (max-width: 800px) {
            .menu {
                display: none;
            }

            .burger {
                display: block;
                margin-left: 20px;
                padding-top: 40px;
            }

            .burger.active .line:nth-child(1) {
                transform: rotate(45deg) translate(5px, 5px);
                transition: 0.2s linear;
            }

            .burger.active .line:nth-child(2) {
                opacity: 0;
                transition: 0.15s linear;
            }

            .burger.active .line:nth-child(3) {
                transform: rotate(-45deg) translate(5px, -5px);
                transition: 0.2s linear;
            }

            nav.active .menu {
                display: block;
                background-color: var( --primary-color);
                position: absolute;
                top: 60px;
                padding-top: 40px;
                left: 0;
                width: 100%;
                z-index: 1;
                height: 100vh;
            }

            nav.active .menu li {
                margin: 10px 20px;
            }

            nav.active .menu a {
                /* font-size: 24px; */
                text-align: left;
                /* Change text alignment to left */
            }

            .projekter_item .projekter_dropdown {
                display: none;
            }

            .projekter_item.active .projekter_dropdown {
                display: block;
                position: static;
                box-shadow: none;
            }

            .sticky_menu {
                display: none;
            }
        }

        @media (min-width: 768px) and (max-width: 1024px) {
            .sticky_menu {
                position: -webkit-sticky;
                position: sticky;
                top: 0;
                width: 200px;
                height: 100vh;
                padding-top: 40px;
                /* border-right: 1px solid #ccc; */
                margin-left: 20px;
            }

            .sticky_menu ul {
                list-style-type: none;
                padding: 0;
                height: 100%;
            }

            .sticky_menu li {
                margin: 10px 0;
            }

            .sticky_menu a {
                text-decoration: none;
                color: var(--secondary-color);
            }

            .sticky_menu a:hover {
                color: var(--tertiary-color);
            }

            .projekter_item.active .projekter_dropdown {
                display: block;
            }

            .projekter_dropdown {
                display: none;
                position: absolute;
                left: 0;
                width: 220px;
                z-index: 1;
            }

            .menu {
                display: none;
            }
        }

        @media screen and (min-width: 1025px) {
            .sticky_menu {
                position: -webkit-sticky;
                position: sticky;
                top: 0;
                width: 200px;
                height: 100vh;
                padding-top: 40px;
                /* border-right: 1px solid #ccc; */
                margin-left: 20px;
            }

            .sticky_menu ul {
                list-style-type: none;
                padding: 0;
                height: 100%;
            }

            .sticky_menu li {
                margin: 10px 0;
            }

            .sticky_menu a {
                text-decoration: none;
                color: var(--secondary-color);
            }

            .sticky_menu a:hover {
                color: var(--tertiary-color);
            }

            .projekter_item.active .projekter_dropdown {
                display: block;
            }

            .projekter_dropdown {
                display: none;
                position: absolute;
                left: 0;
                width: 220px;
                z-index: 1;
            }

            .menu {
                display: none;
            }

            /* .content {
    margin-left: 210px;
    padding: 20px;
    padding-top: 40px;
  } */
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const burger = document.querySelector(".burger");
            const nav = document.querySelector("nav");
            const menu = document.querySelector(".menu");
            const links = document.querySelectorAll(".menu li a");
            const linksSticky = document.querySelectorAll(".sticky_menu li a");
            const projekterItemSticky = document.querySelector(".sticky_menu .projekter_item");
            const projekterDropdown = document.querySelector(".projekter_dropdown") as HTMLElement;
            const projekterItemMenu = document.querySelector(".menu .projekter_item");
            const projekterDropdownMenu = document.querySelector(".menu .projekter_dropdown");
            // Cast resultatet af querySelector til HTMLElement
const stickyMenu = document.querySelector(".sticky_menu") as HTMLElement;
const stickyMenuUl = document.querySelector(".sticky_menu ul") as HTMLElement;


            // Function to handle active link
            function handleActiveLink(event, linkList) {
                linkList.forEach((otherLink) => {
                    otherLink.classList.remove("active");
                });
                event.target.classList.add("active");
            }

            // Add click event to links in the sticky menu
            linksSticky.forEach((link) => {
                link.addEventListener("click", (event) => {
                    handleActiveLink(event, linksSticky);
                    burger.classList.remove("active");
                    nav.classList.remove("active");
                });
            });

           // Toggle dropdown for sticky menu
projekterItemSticky.addEventListener("click", (event) => {
    event.stopPropagation();
    projekterItemSticky.classList.toggle("active");
    const dropdownHeight = projekterDropdown.offsetHeight;

    if (projekterItemSticky.classList.contains("active")) {
        stickyMenuUl.style.height = `calc(100% + ${dropdownHeight}px)`;
        stickyMenu.style.marginBottom = `${dropdownHeight}px`;
    } else {
        stickyMenuUl.style.height = "100%";
        stickyMenu.style.marginBottom = "0";
    }
});

            // Add click event to burger icon
            burger.addEventListener("click", () => {
                burger.classList.toggle("active");
                nav.classList.toggle("active");
            });

            // Close menu when clicking on a link
            links.forEach((link) => {
                link.addEventListener("click", (event) => {
                    handleActiveLink(event, links);
                    burger.classList.remove("active");
                    nav.classList.remove("active");
                });
            });

            // Toggle dropdown for main menu in mobile view
            projekterItemMenu.addEventListener("click", (event) => {
                event.stopPropagation();
                projekterItemMenu.classList.toggle("active");
            });

         // Close dropdown when clicking outside
document.addEventListener("click", (event) => {
    const targetNode = event.target as Node;
    if (!projekterItemMenu.contains(targetNode)) {
        projekterItemMenu.classList.remove("active");
    }
});

        });
    </script>

