---
const {text, variant} = Astro.props;
import "../styles/generel.css";

---
<button type="button">
    <span class="label">
        {text}
    </span>
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none">
        <path d="M9.75 18.75L15.75 12.75L9.75 6.75" stroke="#E73127" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
</button>

<style>
    button{ 
    display: inline flex;
    flex-direction: row;
    align-items: center;
    padding: 0.5rem;;
    background: none;
    color: none;
    border: none;
    cursor: pointer;
    width: 10rem;

    }

    svg{
        flex-shrink: 0;
    }
    .label{
    font-size: var(--footer-secondary-font-size);
      letter-spacing: 0.081rem;
      text-transform: var(--text-transform-uppercase);
      font-weight: var(--font-weight-medium);
      color: var(--secondary-color);
      word-wrap: break-word; /* Sikrer at ord kan bryde af */
    white-space: normal; /* Tillader white space at bryde normalt */
    text-align: left;
    }
    button:hover .label{
    color: var(--tertiary-color);
}

    /*TABLET TABLET TABLET TABLET*/
    @media (min-width: 768px) and (max-width: 1024px) {
.label{
  letter-spacing: 0.1375rem;
}
/* brugt chat til at lave billedet st√∏rre og fjerne det gamle */
svg{
  width: 2rem;
    height: 2rem; 
}
    }
    /*DESKTOP DESKTOP DESKTOP DESKTOP DESKTOP DESKTOP*/

@media (min-width: 1025px) {
  .label{
  font-size: var(--footer-secondary-font-size);
  letter-spacing: 0.1375rem;
}
svg{
  width: 3rem;
    height: 3rem; 
}}
    </style>
    </style>