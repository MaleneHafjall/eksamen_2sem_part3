<style>
/*INDEX_SIDE MOBILESITE */
.container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(12, 1fr);
    width: 100%;
    height: 100vh;
  }

  .forsidebillede {
	display: grid;
    width: 100%;
    height: auto;
    grid-column: 1 / -1;
    grid-row: 1 / 5;
	padding: 0;
    margin: 0;
  }

  .hero-billede {
   grid-area: 1 / 1 / 2 / 2;
    width: 100%;
    height: 100%;
    object-fit: cover;
	margin: 0;
	padding: 0;
  }

  .hero-tekst, h1 {
    grid-area: 1 / 1 / 2 / 2;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    padding-bottom: 20%; 
  }
 .content-section {
    grid-column: 1 / -1;
    grid-row: 5 / 9;
    padding: 20px;
}

.content-section article {
    margin-bottom: 20px;
}

.content-section p {
    margin: 0 0 1rem;
}



.content-section img {
    display: block;
    margin: 1rem 0;
}

.content-section h4,
.content-section h5 {
    margin: 0.5rem 0;
}

.section_to {
    grid-column: 1 / -1;
    grid-row: 10 / 12;
    padding: 20px;
    text-align: center;
}

.section_to h6 {
    margin: 20px 0;
}

.section_to img {
    display: block;
    margin: 20px auto;
}

.section_to p {
    margin-top: 20px;
	text-align: left;
}
