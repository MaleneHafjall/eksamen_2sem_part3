flex-shrink: 0;
  transform-origin: left;
  transition: transform 0.5s ease;
  width: 162px;
} */

/* INDEX-SIDE TABLET (768px til 1024px) */
@media (min-width: 768px) and (max-width: 1024px) {
  .container {
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(12, 1fr);
  }

  .content-section {
    grid-column: 2 / 8;
    grid-row: 5 / 9;
    padding: 40px;
  }

  .section_to {
    grid-column: 2 / 8;
    grid-row: 10 / 12;
    padding: 40px;
  }
}
/* INDEX-SIDE DESKTOP (1025px +) */
@media (min-width: 1025px) {
  .container {
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(12, 1fr);
  }

  .content-section {
    grid-column: 3 / 11;
    grid-row: 5 / 9;
    padding: 60px;
  }

  .section_to {
    grid-column: 3 / 11;
    grid-row: 10 / 12;
    padding: 60px;
  }
}
</style>